<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/Css/all.css" />
    <link rel="stylesheet" href="/Css/nav.css" />
    <link rel="stylesheet" href="/Css/login.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <title>Login</title>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar">
      <div class="nav-left d-flex mt-2">
        <ul>
          <li class="nav-item">
            <a class="nav-brand" href="/">
              <img src="/image/logo.png" alt="Logo" />
            </a>
          </li>
          <li class="nav-item">
            <a href="/" class="nav-link item-collapse">Home</a>
          </li>
          {{#if isLogin}}
          <li class="nav-item">
            <a href="/add-project" class="nav-link item-collapse">Add Project</a>
          </li>
          {{/if}}
          <li class="nav-item">
            <a
              href="/testimonial"
              class="nav-link item-collapse"
            >Testimonial</a>
          </li>
        </ul>
        <form class="nav-right nav-item item-collapse">
          <div class="login-register">
            <a href="/login" class="active item-login item-collapse">Login</a>
            <a href="/register" class="item-register item-collapse">Register</a>
          </div>
          <div class="contact">
            <a href="/contact" class="btn btn-contact">Contact Me</a>
          </div>
        </form>
      </div>
      <button class="btn-barsMenu" id="btn-barsMenu" onclick="openHamburger()">
        <i class="fa-solid fa-bars"></i>
      </button>
    </nav>

    <div class="hamburger-nav-container" id="hamburger-nav-container">
      <a href="/" class="hamburger-active">Home</a>
      <a href="/add-project">Add Project</a>
      <a href="/testimonial">Testimonial</a>
      <a href="/contact" class="btn-hamburger-contact">Contact Me</a>
    </div>

    {{#if messages.danger}}
      <div class="alert alert-danger" role="alert">
        <div class="container">
          {{messages.danger}}
        </div>
      </div>
    {{/if}}
    <!-- End Of Navbar -->
    {{! Form Login }}
    <div class="container">
      <h2>Login To Your Account</h2>
      <div class="form-login">
        <form action="/login" method="post">
          <div class="inputEmail">
            <label for="email">Email</label>
            <input class="form-control" type="text" id="email" name="email" />
          </div>
          <div class="inputPassword">
            <label for="password">Password</label>
            <input
              class="form-control"
              type="password"
              id="password"
              name="password"
            />
          </div>
          <div class="btn btn-submit">
            <button type="submit">Login</button>
          </div>
        </form>
      </div>
    </div>
    {{! End Of Form Login }}
    <script src="/Js/index.js"></script>
  </body>
</html>