<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/Css/all.css" />
    <link rel="stylesheet" href="/Css/nav.css" />
    <link rel="stylesheet" href="/Css/style.css" />
    <link rel="stylesheet" href="/Css/myProject.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <title>Personal Web</title>
  </head>

  <body>
    <!-- Navbar -->
    <nav class="navbar">
      <div class="nav-left d-flex mt-2">
        <ul>
          <li class="nav-item">
            <a class="nav-brand" href="/">
              <img src="/image/logo.png" alt="Logo" />
            </a>
          </li>
          <li class="nav-item">
            <a href="/" class="nav-link item-collapse active">Home</a>
          </li>
          {{#if isLogin}}
            <li class="nav-item">
              <a href="/add-project" class="nav-link item-collapse">Add Project</a>
            </li>
          {{/if}}
          <li class="nav-item">
            <a
              href="/testimonial"
              class="nav-link item-collapse"
            >Testimonial</a>
          </li>
        </ul>
        <form class="nav-right nav-item item-collapse">
          <div class="login-register">
            {{#if isLogin}}
              <a href="#" class="nav-link text-success active">Hello,
                {{user}}</a>
              <a href="/logout">Logout</a>
            {{else}}
              <a href="/login" class="item-login item-collapse active">Login</a>
              <a
                href="/register"
                class="item-register item-collapse"
              >Register</a>
            {{/if}}
          </div>
          <div class="contact">
            <a href="/contact" class="btn btn-contact">Contact Me</a>
          </div>
        </form>
      </div>
      <button class="btn-barsMenu" id="btn-barsMenu" onclick="openHamburger()">
        <i class="fa-solid fa-bars"></i>
      </button>
    </nav>

    <div class="hamburger-nav-container" id="hamburger-nav-container">
      <a href="/" class="hamburger-active">Home</a>
      <a href="/add-project">Add Project</a>
      <a href="/testimonial">Testimonial</a>
      <a href="/contact" class="btn-hamburger-contact">Contact Me</a>
    </div>
    <!-- End Of Navbar -->
    {{#if messages.success}}
      <div class="alert alert-success" role="alert">
        <div class="container">
          {{messages.success}}
        </div>
      </div>
    {{/if}}
    <!-- Card Profile -->
    <div class="container">
      <section>
        <div class="containerCard">
          <div class="left">
            <div class="cardProfile">
              <div class="title">
                <h1>Welcome To My Hut !!!</h1>
              </div>
              <div class="paragraf">
                <p>
                  Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ut
                  porro nemo vitae modi delectus, cum, temporibus quisquam
                  molestias iusto debitis sequi facere, exercitationem officiis
                  saepe culpa necessitatibus nesciunt sunt nisi! Lorem ipsum
                  dolor sit amet, consectetur adipisicing elit. Exercitationem
                  eum, quisquam iusto officiis voluptatem autem suscipit quidem
                  earum nulla! Quas aspernatur impedit amet ipsam iusto sed
                  harum ut eligendi facere! Lorem ipsum dolor sit amet
                  consectetur adipisicing elit. Rem atque perspiciatis labore
                  totam architecto eum corrupti numquam provident, recusandae,
                  velit et natus, doloribus explicabo voluptatem deleniti
                  aliquid exercitationem officiis quasi.
                </p>
              </div>
              <div class="buttonCv">
                <a href="/contact"><button>Contact Me</button></a>
                <p>
                  <a href="/pdf/sezyxx.pdf">Download Cv<i
                      class="fa-solid fa-download"
                    ></i></a>
                </p>
              </div>
              <div class="social">
                <a
                  href="https://www.linkedin.com/in/mochamad-saddam-a44b87249/"
                ><i class="fa-brands fa-linkedin"></i></a>
                <a href="https://instagram.com/encdamz"><i
                    class="fa-brands fa-instagram"
                  ></i></a>
                <a href="https://twitter.com/nczeesh"><i
                    class="fa-brands fa-twitter"
                  ></i></a>
                <a href="https://github.com/shenczz"><i
                    class="fa-brands fa-github"
                  ></i></a>
              </div>
            </div>
          </div>
          <div class="right">
            <div class="card">
              <img src="/image/profile.jpg" alt="Foto Profile" />
              <h3>Mochamad Saddam</h3>
              <p>Fullstack Developer</p>
            </div>
          </div>
        </div>
      </section>
    </div>
    <!-- End Of Card Profile -->
    <!-- Card Project -->
    <hr />
    <section class="project-card">
      <h1>My Project</h1>
      {{#if isLogin}}
      <div class="container-card" id="container-card">
        {{#each data}}
          <div class="card-project">
            <div class="image-project">
              <img src="/image/blog-img.png" alt="image-project" />
            </div>
            <div class="title-and-duration">
              <h3>
                <a href="/detail-project/{{this.id}}">{{this.name_project}}</a>
              </h3>
              <p>Duration: {{this.duration}}</p>
            </div>
            <div class="description-project">
              <p>
                {{this.description}}
              </p>
            </div>
            <div class="tech-project">
              {{#if this.nodejs}}
                <i class="fa-brands fa-node-js"></i>
              {{/if}}

              {{#if this.golang}}
                <i class="fa-brands fa-golang"></i>
              {{/if}}

              {{#if this.reactjs}}
                <i class="fa-brands fa-react"></i>
              {{/if}}

              {{#if this.javascript}}
                <i class="fa-brands fa-square-js"></i>
              {{/if}}
            </div>
            <div class="button-group">
              <div class="btn-edit">
                <a
                  href="/update-project/{{this.id}}"
                  class="btn"
                  type="button"
                  style="padding: 5px 30px; background-color: black; color: white !important;"
                >Edit</a>
              </div>
              <div class="btn-delete">
                <a
                  href="/delete-project/{{this.id}}"
                  class="btn"
                  type="button"
                  style="padding: 5px 30px; background-color: black; color: white !important;"
                >Delete</a>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
      {{/if}}
    </section>
    <!-- End Of Card Project -->
    <script src="/Js/index.js"></script>
    <script src="/Js/myProject.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
  </body>
</html>